<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whatsapp Features</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <h3>What's App</h3>

      <form action="/chats/new" method="GET">
        <button>New Chat</button>
      </form>
   <br>
    <%for(let chat of chats){%>
        <div class="chat">
            <p id="from">From: <%= chat.from %></p>
            <div class="msg">
                <p> <%= chat.msg %></p>
              </div>

              <form method="GET" action="/chats/<%= chat.id %>/edit"> 
                <button id="edit">Edit</button>
              </form>

              <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE"> 
                <button id="edit">Delete</button>
              </form>
            <p id="from">Received by: <%= chat.to %></p>
            <p id="date"><%= chat.createdAt %></p>
        </div>
        <hr>

         <% } %>
          
  </body>
</html>


